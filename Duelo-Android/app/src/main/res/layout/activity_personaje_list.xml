<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:weightSum="1">

        <EditText
            android:id="@+id/editText"
            android:layout_width="308dp"
            android:layout_height="58dp"
            android:inputType="text"
            android:hint="Buscar personaje..."
            android:ems="11" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/buscador"
            android:onClick="buscarPeliculas"
            android:src="@drawable/lupita"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:id="@+id/personaje_list"
        android:name="com.example.pivanic.duelodeleyendas.PersonajeListFragment"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
        tools:context=".PersonajeListActivity" tools:layout="@android:layout/list_content" />

</LinearLayout>
